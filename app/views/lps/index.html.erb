<p id="notice"><%= notice %></p>

<h1>Lps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lps.each do |lp| %>
      <tr>
        <td><%= lp.name %></td>
        <td><%= lp.description %></td>
        <td><%= lp.artist %></td>
        <td>show</td>
        <td>edit</td>
        <td><%= link_to 'Destroy', [@artist, lp], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
